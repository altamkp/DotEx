{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": ["**/*.csproj"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appFaviconPath": "images/altamkp.ico",
      "_appFooter": "Copyright (c) altamkp",
      "_appLogoPath": "images/altamkp.png",
      "_appName": "DotEx",
      "_appTitle": "DotEx",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
